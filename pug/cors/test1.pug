        .uk-section.uk-section-default
            .uk-container
                h1.uk-heading-divider.uk-text-center Request With Credential
                #photos-acid2
                    h3 Loading photos...
        .uk-section.uk-section-default
            .uk-container
                h1.uk-heading-divider.uk-text-center#cauthHead CORS AUTH
                .uk-grid-small.uk-grid-match(class='uk-child-width-1-3@m', uk-grid uk-height-match="target: > div > .uk-card")
                    div
                        .uk-card.uk-card-default.uk-card-body#authCard
                            h3.uk-card-title Auth With Server?
                            p.uk-text-danger.uk-text-bold#auth No!
                    div
                        .uk-card.uk-card-default.uk-card-body
                            h3.uk-card-title Validate Our Token?
                            p.uk-text-danger.uk-text-bold#tokenValid No!
                    div
                        .uk-card.uk-card-default.uk-card-body
                            h3.uk-card-title Get The Current User?
                            p.uk-text-danger.uk-text-bold#getUsr No!
                span.uk-clearfix
                .uk-flex.uk-flex-center.uk-flex-auto
                    .uk-card.uk-card-default.uk-card-large
                        .uk-card-body#authErrorOrUser
                            h3.uk-card-title State
                        .uk-card-footer
                            p#authState
        .uk-section.uk-section-default.uk-invisible#errorContainer
            .uk-container#errors
